{
  "name": "employee_manager",
  "version": "1.0.0",
  "description": "simple CRUD application",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "dev": "nodemon src/index.js --exec babel-node -e js",
    "clean": "rm -rf build && rm -rf coverage",
    "build-babel": "babel -d ./build ./src -s",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./build/index.js"
  },
  "author": "Dera",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.2.1",
    "mongoose": "^5.10.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "eslint": "^7.8.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4"
  },
  "eslintIgnore": [
    "*.test.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run test --coverage"
    }
  }
}
